<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="sample-plugin"
        version="1.0">

    <name>Sample Plugin</name>
    <description>Cordova Sample Plugin</description>
    <license>Apache 2.0</license>
    <keywords>Cordova, Sample Plugin</keywords>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="SamplePlugin">
                <param name="ios-package" value="SamplePlugin"/>
            </feature>
        </config-file>

        <config-file target="*-Info.plist" parent="CFBundleDevelopmentRegion">
            <string>en</string>
        </config-file>

        <config-file target="*-Info.plist" parent="NSCrossWebsiteTrackingUsageDescription">
            <string>For enabling cookies in customer plugins embedded as iframes</string>
        </config-file>

        <config-file target="*-Info.plist" parent="UIUserInterfaceStyle">
            <string>Dark</string>
        </config-file>

        <config-file target="*-Info.plist" parent="WKAppBoundDomains">
            <array>
                <string>abhinavms.github.io</string>
            </array>
        </config-file>

        <hook type="before_compile" src="scripts/modifyWebViewEngine.js" />
    </platform>
</plugin>
